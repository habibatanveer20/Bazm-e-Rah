<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighb"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help â€” Voice &amp; AI Assistant"
            android:textColor="@color/teal_200"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="12dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The microphone starts automatically. No need to tap the mic. To access AI Assistant features, select AI Assistant from the main page."
            android:textColor="@color/light_gray"
            android:textSize="15sp"
            android:paddingBottom="16dp" />

        <!-- Emergency Contact Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#2A2727">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ“ž"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:contentDescription="Emergency icon"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Contact"
                        android:textColor="@color/teal_700"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call or message your emergency contact instantly."
                        android:textColor="@color/light_gray"
                        android:textSize="14sp"
                        android:paddingTop="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_call_emergency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call"
                        android:backgroundTint="@color/teal_700"
                        android:textColor="@color/white"
                        android:padding="6dp"
                        android:contentDescription="Call emergency contact"/>

                    <Button
                        android:id="@+id/btn_message_emergency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/teal_700"
                        android:textColor="@color/white"
                        android:padding="6dp"
                        android:contentDescription="Message emergency contact"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- AI Assistant Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#2A2727">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Assistant"
                    android:textColor="@color/teal_700"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="4dp"
                    android:contentDescription="AI Assistant info"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select AI Assistant from the main page to access AI features. The system automatically listens and responds to your environment."
                    android:textColor="@color/light_gray"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tips & Tricks Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#2A2727">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tips &amp;Tricks"
                    android:textColor="@color/teal_700"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Move slowly while using the smart stick for better object detection."
                    android:textColor="@color/light_gray"
                    android:textSize="14sp"
                    android:paddingBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Say 'Repeat' if you didnâ€™t hear instructions correctly."
                    android:textColor="@color/light_gray"
                    android:textSize="14sp"
                    android:paddingBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Hold the stick steady to improve scanning accuracy."
                    android:textColor="@color/light_gray"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Read Aloud Button -->
        <Button
            android:id="@+id/btn_read_aloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read Aloud Instructions"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:contentDescription="Read instructions aloud"/>

        <!-- Contact Support Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#2A2727">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Need More Help?"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_contact_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Support"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@color/white"
                    android:contentDescription="Contact support"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View android:layout_height="16dp" android:layout_width="match_parent"/>
    </LinearLayout>
</ScrollView>
